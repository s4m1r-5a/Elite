<main class="content">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        {{#each cuotas}}
                        <input type="hidden" id="separacion" value="{{SEPARACION}}">
                        <input type="hidden" id="ncal" value="{{INICIAL}}">
                        <input type="hidden" id="financia" value="{{FINANCIACION}}">
                        {{/each}}
                        {{#each orden}}
                        <input type="hidden" id="ecesr" value="{{asesor}}">
                        <input type="hidden" id="status" value="{{status}}">
                        <input type="hidden" id="clent1" value="{{cliente}}">
                        <input type="hidden" id="clent2" value="{{cliente2}}">
                        <input type="hidden" id="clent3" value="{{cliente3}}">
                        <input type="hidden" id="clent4" value="{{cliente4}}">
                        <input type="hidden" id="Montos" value="{{Montos}}">
                        <input type="hidden" id="Pagos" value="{{t}}">
                        <input type="hidden" id="iniciar" value="{{iniciar}}">
                        <input type="hidden" id="vrmt2" value="{{vrmt2}}">
                        <input type="hidden" id="separar" value="{{separar}}">
                        <input type="hidden" id="kupon" value="{{cupon}}">
                        <input type="hidden" id="cuota" value="{{cuot}}">
                        <input type="hidden" id="pin" value="{{pin}}">
                        <input type="hidden" id="descuento" value="{{descuento}}">

                    </div>
                    <div class="card-body" id="cuadro2">
                        <table id="crearcartera" class="table table-striped table-sm table-hover">
                            <thead>
                                <input type="hidden" id="prodct" name="lote" value="{{lote}}">
                                <input type="hidden" id="mtro2" name="mtr2" value="{{mtr2}}">
                                <input type="hidden" id="ID-Sep" name="preventa" value="{{id}}">
                                <input type="hidden" id="cuot" name="cuot">
                                <input type="hidden" id="idbono" name="idbono">
                                <input type="hidden" id="otro" name="otro">
                                <input type="hidden" name="uno" value="{{uno}}">
                                <input type="hidden" name="dos" value="{{dos}}">
                                <input type="hidden" name="tres" value="{{tres}}">
                                <input type="hidden" name="directa" value="{{directa}}">
                                <input type="hidden" name="valmtr2" value="{{valmtr2}}">
                                <input type="hidden" name="porcentage" value="{{porcentage}}">
                                {{/each}}
                                <tr>
                                    <th colspan="6">
                                        <div class="row">
                                            <div class="col-12 col-lg-6">
                                                <table class="table table-sm">
                                                    <tbody>
                                                        <tr>
                                                            <th colspan="2">
                                                                <select id="proyectos"
                                                                    class="form-control-no-border select2" name="lt"
                                                                    style="width: 100%;" required>
                                                                </select>
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th colspan="2">
                                                                <select id="asesores"
                                                                    class="form-control-no-border select2" name="asesor"
                                                                    style="width: 100%;" required>
                                                                </select>
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th colspan="2">
                                                                <select id="clientes"
                                                                    class="form-control-no-border select2"
                                                                    name="clientes" style="width: 100%;" multiple
                                                                    required>
                                                                </select>
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th colspan="2">
                                                                <div class="row">
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>MTR²</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                type="text" name="mtr2"
                                                                                autocomplete="off" id="mtr2"
                                                                                placeholder="Digite total de mtr²"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>VMTR²</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                type="text" name="vmtr2" id="vmtr2"
                                                                                autocomplete="off"
                                                                                placeholder="Digite el precio del mtr²"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                data-mask="000.000.000"
                                                                                data-mask-reverse="true"
                                                                                data-mask-selectonfocus="true" required>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>INICIAL</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                name="inicial" autocomplete="off"
                                                                                type="text" id="inicial"
                                                                                placeholder="Monto de separacion"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                data-mask="000.000.000"
                                                                                data-mask-reverse="true"
                                                                                data-mask-selectonfocus="true" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>TOTAL</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                name="total" autocomplete="off"
                                                                                type="text" id="total"
                                                                                placeholder="Insentivo por separacion"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                data-mask="000.000.000"
                                                                                data-mask-reverse="true"
                                                                                data-mask-selectonfocus="true" disabled>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <table class="table table-sm">
                                                    <tbody>
                                                        <tr>
                                                            <th colspan="2">
                                                                <div class="text-center row">
                                                                    <div class="col-4">
                                                                        ESTADO DE PROMESA:
                                                                    </div>
                                                                    <div class="col-8">
                                                                        <select class="form-control-no-border"
                                                                            style="padding: 1px;text-align:center;"
                                                                            id="promesa" name="promesa" required>
                                                                            <option value="">SIN PROMESA</option>
                                                                            <option value="1">PROMESA GENERADA
                                                                            </option>
                                                                            <option value="2">PROMESA AUTENTICADA
                                                                                POR CLIENTE</option>
                                                                            <option value="3">PROMESA AUTENTICADA
                                                                                POR AMBOS</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th colspan="2">
                                                                <div class="text-center row">
                                                                    <div class="col-6">
                                                                        CUPON
                                                                        <input
                                                                            class="form-control-no-border text-center text-uppercase"
                                                                            type="text" autocomplete="off" name="cupon"
                                                                            id="cupon" placeholder="Cupon"
                                                                            style="padding: 1px; width: 115px; background-color: #FFFFCC;">
                                                                    </div>
                                                                    <div class="col-6">
                                                                        INICIAL
                                                                        <select class="form-control-no-border"
                                                                            style="padding: 1px; width: 115px;text-align:center;"
                                                                            id="xcntag" name="xcntag" required>
                                                                            <option value="15">15%</option>
                                                                            <option value="20">20%</option>
                                                                            <option value="25">25%</option>
                                                                            <option value="30">30%</option>
                                                                            <option value="35">35%</option>
                                                                            <option value="40">40%</option>
                                                                            <option value="45">45%</option>
                                                                            <option value="50">50%</option>
                                                                            <option value="55">55%</option>
                                                                            <option value="60">60%</option>
                                                                            <option value="65">65%</option>
                                                                            <option value="70">70%</option>
                                                                            <option value="75">75%</option>
                                                                            <option value="80">80%</option>
                                                                            <option value="85">85%</option>
                                                                            <option value="90">90%</option>
                                                                            <option value="95">95%</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th colspan="2">
                                                                <div class="row">
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>CUPON</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                type="text" name="cuponx100"
                                                                                autocomplete="off" id="cuponx100to"
                                                                                placeholder="Cupon"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>AHORRO</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                type="text" name="ahorro" id="ahorro"
                                                                                autocomplete="off" placeholder="Ahorro"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                data-mask="000.000.000"
                                                                                data-mask-reverse="true"
                                                                                data-mask-selectonfocus="true" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>INICIAL</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                name="desinicial" autocomplete="off"
                                                                                type="text" id="desinicial"
                                                                                placeholder="Inicial"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                data-mask="000.000.000"
                                                                                data-mask-reverse="true"
                                                                                data-mask-selectonfocus="true" disabled>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-6 col-sm-3">
                                                                        <div class="text-center">
                                                                            <h6>TOTAL</h6>
                                                                        </div>
                                                                        <div class="text-center">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                name="destotal" autocomplete="off"
                                                                                type="text" id="destotal"
                                                                                placeholder="Total"
                                                                                style="padding: 1px; width: 80%; background-color: #FFFFCC;"
                                                                                data-mask="000.000.000"
                                                                                data-mask-reverse="true"
                                                                                data-mask-selectonfocus="true" disabled>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th colspan="2">
                                                                <div class="text-center row">
                                                                    <div class="col-sm-6">
                                                                        ESTABLECE LAS CUOTAS DE LA INICIAL Y
                                                                        FINANCIACION
                                                                    </div>
                                                                    <div class="col-sm-3">
                                                                        <div class="input-group mb-2">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                name="inicialcuotas" autocomplete="off"
                                                                                type="text" id="inicialcuotas"
                                                                                placeholder="INI"
                                                                                style="width: 40px; background-color: #FFFFCC;"
                                                                                disabled>
                                                                            <span class="input-group-append">
                                                                                <button class="btn btn-secondary"
                                                                                    id="inicialcuotas-btn"
                                                                                    type="button">+</button>
                                                                            </span>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm-3">
                                                                        <div class="input-group">
                                                                            <input
                                                                                class="form-control-no-border text-center"
                                                                                name="financiacion" autocomplete="off"
                                                                                type="text" id="financiacion"
                                                                                placeholder="FNC"
                                                                                style="width: 40px; background-color: #FFFFCC;"
                                                                                disabled>
                                                                            <span class="input-group-append">
                                                                                <button class="btn btn-secondary"
                                                                                    id="financiacion-btn"
                                                                                    type="button">+</button>
                                                                            </span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                        </tr>
                                                        <tr>
                                                            <th colspan="2">
                                                                <div class="text-center row">
                                                                    <div class="col-6">
                                                                        TOTAL INI
                                                                        <input
                                                                            class="form-control-no-border text-center text-uppercase"
                                                                            type="text" autocomplete="off" name="tini"
                                                                            id="ini" placeholder="20%"
                                                                            style="padding: 1px; width: 115px; background-color: #FFFFCC;"
                                                                            disabled>
                                                                    </div>
                                                                    <div class="col-6">
                                                                        TOTAL FNC
                                                                        <input
                                                                            class="form-control-no-border text-center text-uppercase"
                                                                            type="text" autocomplete="off" name="tfnc"
                                                                            id="fnc" placeholder="80%"
                                                                            style="padding: 1px; width: 115px; background-color: #FFFFCC;"
                                                                            disabled>
                                                                    </div>
                                                                </div>
                                                            </th>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan="9">
                                        <button type="button" class="btn btn-primary btn-sm float-right guardar">Guardar
                                            Cambios</button>
                                        <button type="button" class="btn btn-primary btn-sm float-right quitar mr-2"
                                            style="display: none;">Quitar Bono</button>
                                    </th>
                                </tr>
                                <tr>
                                    <th></th>
                                    <th>FECHA</th>
                                    <th style="width: 3%;">#</th>
                                    <th>T</th>
                                    <th>CUOTA</th>
                                    <th>X</th>
                                </tr>
                            </thead>
                            <tbody class="tabl"></tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="6" class="text-center">
                                        <button type="button" class="btn btn-primary btn-sm float-right guardar">Guardar
                                            Cambios</button>
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
