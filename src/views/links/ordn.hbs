<main class="content">
    <div class="card">
        <div class="card-header">
            <div class="text-right mb-3">
                <small class="text-muted">color </small><span
                    class="badge badge-primary text-md-center">Editables</span><br>
                <small class="text-muted">color </small><span class="badge badge-dark text-md-center">Ineditables</span>
            </div>
            <div class="card border-primary">
                <div class="row no-gutters">
                    <div class="col-md-2">
                        <i class="ml-2 fas fa-users fa-10x" style="color:#2196F3"></i>
                    </div>
                    <div class="col-md-10">
                        <div class="card-body text-right">
                            <small class="text-muted">Asesor </small><span
                                class="badge badge-dark text-md-center">{{fullname}}</span><br>
                            <small class="text-muted">cliente1 </small><span
                                class="badge badge-dark text-md-center">{{nombre}}</span><br>
                            <small class="text-muted">cliente2 </small><span
                                class="badge badge-primary text-md-center">{{n2}}</span><br>
                            <small class="text-muted">cliente3 </small><span
                                class="badge badge-primary text-md-center">{{n3}}</span><br>
                            <small class="text-muted">cliente4 </small><span
                                class="badge badge-primary text-md-center">{{n4}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <table class="table table-sm my-2">
                        <tbody>
                            <tr>
                                <th>
                                    <i class="feather-md" data-feather="user"></i> Proyecto
                                </th>
                                <td>
                                    <span class="text-md-center">{{proyect}}</span>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="feather-md" data-feather="map-pin"></i> Mtr²
                                    <span class="badge badge-dark text-md-center ml-2 mr2">{{mtr2}}</span>
                                </th>
                                <td>
                                    Vr mtr²
                                    <span class="badge badge-primary text-md-center ml-2 vm2 ei">{{vrmt2}}</span>
                                    <input class="text-center ei" id="vrm2" value="{{vrmt2}}" data-mask="000.000.000"
                                        data-mask-reverse="true" data-mask-selectonfocus="true"
                                        style="padding: 1px;width:60px;display: none;">
                                    <strong class="float-right totalp">{{valor}}</strong>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="feather-md" data-feather="credit-card"></i> Cuota Inicial
                                    <span class="badge badge-primary text-md-center ml-2 ei inip">{{iniciar}}</span>
                                    <select class="ei" id="ncl" style="padding:1px;width:60px;display:none;">
                                        <option value="15">15%</option>
                                        <option value="20">20%</option>
                                        <option value="25">25%</option>
                                        <option value="30">30%</option>
                                        <option value="35">35%</option>
                                        <option value="40">40%</option>
                                        <option value="45">45%</option>
                                        <option value="50">50%</option>
                                    </select>
                                </th>
                                <td>
                                    Diferida
                                    <span class="badge badge-dark text-md-center ml-2">{{inicialdiferida}} meses</span>
                                    <strong class="float-right totali">{{inicial}}</strong>
                                    <input type="hidden" id="inicialdiferida" value="{{inicialdiferida}}">
                                </td>
                            </tr>
                            <tr>
                            <tr>
                                <th>
                                    <i class="feather-md" data-feather="calendar"></i> Financiación Pryt
                                    <span class="badge badge-dark text-md-center ml-2">{{numerocuotaspryecto}}
                                        meses</span>
                                    <input type="hidden" id="numerocuotaspryecto" value="{{numerocuotaspryecto}}">
                                </th>
                                <td>
                                    <i class="feather-md" data-feather="calendar"></i> Cuota
                                    <strong class="float-right" id="cuota">{{cuot}}</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-6">
                    <table class="table table-sm my-2">
                        <tbody>
                            <tr>
                                <th>
                                    <i class="feather-md" data-feather="heart"></i> Mz
                                    <span class="badge badge-dark text-md-center ml-2">{{mz}}</span>
                                </th>
                                <td>
                                    <i class="feather-md" data-feather="heart"></i> Lote
                                    <span class="badge badge-dark text-md-center ml-2">{{n}}</span>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="feather-md" data-feather="mail"></i> Desct.
                                    <span class="badge badge-dark text-md-center ml-2 des">{{descuento}}</span>
                                </th>
                                <td>
                                    Cupon <span class="badge badge-primary text-md-center ml-2 ei pin">{{pin}}</span>
                                    <input class="text-center ei  text-uppercase" id="cupon" value="{{pin}}"
                                        style="padding: 1px;width:60px;display: none;">
                                    <strong class="float-right ahorro">{{ahorro}}</strong>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    <i class="feather-md" data-feather="phone-call"></i>
                                    Extraordinaria
                                    <span class="badge badge-dark text-md-center ml-2 mxr">{{extran}}</span>
                                </th>
                                <td>
                                    Mes(es) <span
                                        class="badge badge-dark text-md-center ml-2 mss">{{extraordinariameses}}</span>
                                    <strong class="float-right extrao">{{cuotaextraordinaria}}</strong>
                                </td>
                            </tr>
                            <th>
                                <i class="feather-md" data-feather="calendar"></i> Separacion
                            </th>
                            <td>
                                <input class="float-right form-control-no-border separar text-primary text-right ei"
                                    type="text" value="{{separar}}" data-mask="000.000.000" data-mask-reverse="true"
                                    data-mask-selectonfocus="true" style="padding: 1px;color: #2196F3;">
                            </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <select class="float-right ei" id="estructura" style="padding:1px;">
                <option value="1">Restructurar</option>
                <option value="2">Mantener estructura</option>
            </select>
        </div>
        <div class="card-body">
            <table id="datatable" class="table table-striped table-hover table-sm display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>#</th>
                        <th>Fecha</th>
                        <th>Cuota</th>
                        <th>Estado</th>
                        <th>#</th>
                        <th>Fecha</th>
                        <th>Cuota</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <h4 class="card-title">Observaciones</h4>
            {{tipobsevacion}} <small class="text-muted">{{obsevacion}}</small>
        </div>
    </div>
</main>
